{
  "name": "hhgstream",
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0",
    "mustache": "^4.2.0",
    "react-date-picker": "^9.1.0",
    "react-hook-form": "^7.41.3",
    "zustand": "^4.3.2"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run electron:serve",
    "build": "npm run react:build && npm run electron:build",
    "test": "jest",
    "react:start": "cross-env CI=true react-scripts start",
    "react:build": "cross-env CI=true react-scripts build",
    "react:eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm run react:start\" \"npm run electron:start\"",
    "electron:build": "electron-builder",
    "electron:start": "wait-on tcp:127.0.0.1:3000 && electron ."
  },
  "build": {
    "extends": null,
    "appId": "com.github.rvanheest.hhgstream",
    "productName": "HhgStream",
    "win": {
      "icon": "build/favicon.ico"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "build/main.js"
    },
    "extraFiles": [
      "public/default-config.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "rvanheest",
        "repo": "HhgStream",
        "vPrefixedTagName": false,
        "releaseType": "release"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@types/jest": "^29.1.2",
    "@types/mustache": "^4.2.2",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-bootstrap": "^0.32.32",
    "@types/react-dom": "^18.0.9",
    "bootstrap": "^5.2.3",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^21.3.1",
    "electron-builder": "^23.6.0",
    "jest": "^29.2.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.6.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3",
    "wait-on": "^6.0.1"
  }
}
