{
  "name": "hhgstream",
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "electron-is-dev": "^2.0.0"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run electron:serve",
    "build": "npm run electron:build",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "react:eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm run react:start\" \"npm run electron:start\"",
    "electron:build": "npm run react:build && electron-builder build --windows",
    "electron:start": "wait-on tcp:127.0.0.1:3000 && electron ."
  },
  "build": {
    "extends": null,
    "appId": "com.github.rvanheest.hhgstream",
    "productName": "HhgStream",
    "win": {
      "icon": "build/favicon.ico"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "build/main.js"
    },
    "extraFiles": [
      "public/config.json"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "bootstrap": "^5.2.1",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^20.2.0",
    "electron-builder": "^23.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.8.3",
    "wait-on": "^6.0.1"
  }
}
